---
// Import necessary modules
import Layout from '../layouts/PageLayout.astro';
import Nav from '../components/Nav.astro';
import Footer from "../components/Footer.astro";

// Determine the correct API base URL
const API_BASE_URL = import.meta.env.PUBLIC_API_BASE_URL || 'http://localhost:1337';

// Fetch data from Strapi
async function fetchDesignItems() {
    const response = await fetch(`${API_BASE_URL}/api/design-items?populate=*`);
    if (!response.ok) {
        console.error('Failed to fetch design items:', response.statusText);
        return [];
    }
    const data = await response.json();
    return data.data || [];
}

const designItems = await fetchDesignItems();
---

<Layout title="Rafael Monteiro - Design">
    <main>
        <Nav />

        <!-- Design Gallery -->
        <section class="gallery bg-white py-24">
            <div class="container mx-auto px-8">
                <!-- [Introductory section remains unchanged] -->

                <!-- Grid for Design Items -->
                <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                    {designItems.map(item => (
                            <div class="group design-item cursor-pointer relative"
                                 data-images={JSON.stringify(item.attributes.images?.data?.map(image => image.attributes.url) || [])}>
                                {item.attributes.coverImage?.data && (
                                        <img src={item.attributes.coverImage.data.attributes.url} alt={item.attributes.title} class="w-full h-auto" />
                                )}
                                <div class="absolute inset-0 bg-black bg-opacity-50 opacity-0 group-hover:opacity-100 flex items-center justify-center p-4 transition-opacity">
                                    <div class="text-white text-center">
                                        <h3 class="text-xl font-semibold">{item.attributes.title}</h3>
                                        <p>{item.attributes.description}</p>
                                    </div>
                                </div>
                            </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Lightbox Structure -->
        <div id="lightbox" class="hidden fixed inset-0 bg-black bg-opacity-75 z-50 flex justify-center items-center p-4">
            <div class="lightbox-content max-w-5xl max-h-full bg-white">
                <img id="lightbox-img" src="" alt="Selected Image" class="max-w-full max-h-full" />
                <div class="flex justify-between items-center p-2">
                    <button id="prev-btn" class="text-black">Prev</button>
                    <button id="close-btn" class="text-black">Close</button>
                    <button id="next-btn" class="text-black">Next</button>
                </div>
            </div>
        </div>

        <Footer />
    </main>
</Layout>

<script type="text/javascript">
    const designItemsElements = document.querySelectorAll('.design-item');
    let currentImageIndex = 0;
    let images = [];

    designItemsElements.forEach(item => {
        item.addEventListener('click', function() {
            images = JSON.parse(this.getAttribute('data-images'));
            currentImageIndex = 0;
            updateLightboxImage();
            document.getElementById('lightbox').classList.remove('hidden');
        });
    });

    function updateLightboxImage() {
        const lightboxImg = document.getElementById('lightbox-img');
        lightboxImg.src = images[currentImageIndex] || '';
        lightboxImg.alt = `Image ${currentImageIndex + 1}`;
    }

    document.getElementById('prev-btn').addEventListener('click', function() {
        if (currentImageIndex > 0) {
            currentImageIndex--;
            updateLightboxImage();
        }
    });

    document.getElementById('next-btn').addEventListener('click', function() {
        if (currentImageIndex < images.length - 1) {
            currentImageIndex++;
            updateLightboxImage();
        }
    });

    document.getElementById('close-btn').addEventListener('click', function() {
        document.getElementById('lightbox').classList.add('hidden');
    });

    document.getElementById('lightbox').addEventListener('click', function(e) {
        if (e.target.id === 'lightbox') {
            this.classList.add('hidden');
        }
    });
</script>
