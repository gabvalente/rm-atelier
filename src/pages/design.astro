---
// Import necessary modules
import Layout from '../layouts/PageLayout.astro';
import Nav from '../components/Nav.astro';
import Footer from "../components/Footer.astro";

// Determine the correct API base URL
const API_BASE_URL = import.meta.env.PUBLIC_API_BASE_URL || import.meta.env.STRAPI_CLOUD_BASE_URL || 'http://localhost:1337';

// Fetch data from Strapi
async function fetchDesignItems() {
    const response = await fetch(`${API_BASE_URL}/api/design-assets?populate=*`);
    if (!response.ok) {
        console.error('Failed to fetch design items:', response.statusText);
        return [];
    }
    const data = await response.json();
    return data.data || [];
}

const designItems = await fetchDesignItems();
---

<Layout title="Rafael Monteiro - Design">
    <main>
        <Nav />

        <!-- Design Gallery -->
        <section class="gallery bg-white py-24">
            <div class="container mx-auto px-8">
                <div class="text-center mb-12">
                    <h2 class="text-3xl font-bold mb-4">Design Gallery</h2>
                    <p class="mb-8 text-lg text-gray-600">Explore Rafael's unique designs and furniture pieces.</p>
                </div>

                <!-- Grid for Design Items -->
                <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                    {designItems.map(item => (
                            <div class="design-item cursor-pointer" data-images={JSON.stringify(item.attributes.images.data)}>
                                {item.attributes.cover.data && (
                                        <img src={item.attributes.cover.data.attributes.url} alt={item.attributes.title} class="w-full h-auto" />
                                )}
                                <h3 class="text-xl font-semibold">{item.attributes.title}</h3>
                                <p class="text-gray-600">{item.attributes.description}</p>
                            </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Lightbox Structure -->
        <div id="lightbox" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex justify-center items-center">
            <div class="lightbox-content max-w-3xl max-h-full p-4 bg-white">
                <img id="lightbox-img" src="" alt="Selected Image" class="max-w-full max-h-full" />
                <button id="prev-btn">Prev</button>
                <button id="next-btn">Next</button>
                <button id="close-btn">Close</button>
            </div>
        </div>

        <Footer />
    </main>
</Layout>

<script type="text/javascript">
    const designItems = document.querySelectorAll('.design-item');
    let currentImageIndex = 0;
    let images = [];

    designItems.forEach(item => {
        item.addEventListener('click', function() {
            images = JSON.parse(this.getAttribute('data-images'));
            currentImageIndex = 0;
            updateLightboxImage();
            document.getElementById('lightbox').classList.remove('hidden');
        });
    });

    function updateLightboxImage() {
        const lightboxImg = document.getElementById('lightbox-img');
        lightboxImg.src = images[currentImageIndex]?.attributes?.url || '';
        lightboxImg.alt = images[currentImageIndex]?.attributes?.name || 'Image';
    }

    document.getElementById('prev-btn').addEventListener('click', function() {
        if (currentImageIndex > 0) {
            currentImageIndex--;
            updateLightboxImage();
        }
    });

    document.getElementById('next-btn').addEventListener('click', function() {
        if (currentImageIndex < images.length - 1) {
            currentImageIndex++;
            updateLightboxImage();
        }
    });

    document.getElementById('close-btn').addEventListener('click', function() {
        document.getElementById('lightbox').classList.add('hidden');
    });

    document.getElementById('lightbox').addEventListener('click', function(e) {
        if (e.target.id === 'lightbox') {
            this.classList.add('hidden');
        }
    });
</script>